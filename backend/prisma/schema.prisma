// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  provider       String   // "email" | "kakao" | "naver" | "google"
  passwordHash   String?  // email/password 가입 시 사용 (소셜 로그인은 null)
  targetDiocese  String?  // 관심 교구
  themeColor     String?  // 사용자 고유 스테인드글라스 테마 컬러
  bookmarks      Bookmark[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Event {
  id               String   @id @default(uuid())
  title            String
  date             DateTime?
  location         String?
  latitude         Float?
  longitude        Float?
  originUrl        String?
  aiSummary        String?  @db.Text
  themeColor       String?  // 스테인드글라스 테마 색상값
  category         String?  // 피정, 강론, 행사 등
  status           String   @default("PENDING")  // PENDING | APPROVED | REJECTED
  imageUrl         String?  // 행사 대표 이미지
  submitterName    String?  // 등록자 이름
  submitterContact String?  // 등록자 연락처
  rejectionReason  String?  // 거절 사유
  bookmarks        Bookmark[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Bookmark {
  id        String   @id @default(uuid())
  userId    String
  eventId   String
  user      User     @relation(fields: [userId], references: [id])
  event     Event    @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, eventId])
}

model Admin {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
